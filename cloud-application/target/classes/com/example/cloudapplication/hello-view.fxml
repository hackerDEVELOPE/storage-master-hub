<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ContextMenu?>

<?import com.sun.javafx.scene.control.ContextMenuContent.MenuBox?>
<?import javafx.scene.control.MenuItem?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cloudapplication.StorageController">
    <HBox>
        <ListView fx:id="clientView" onMouseClicked="#changePathClient" prefHeight="335.0" prefWidth="214.0">
           <contextMenu>
               <ContextMenu>
                  <items>
                      <MenuItem text="delete" onAction="#deleteFileOnClientSide"/>
                  </items>
               </ContextMenu>
           </contextMenu>
        </ListView>

        <ListView fx:id="serverView" onMouseClicked="#changePathOnServerRequest" prefHeight="335.0" prefWidth="214.0">
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem text="delete" onAction="#deleteFileOnServerSide"/>
                    </items>
                </ContextMenu>
            </contextMenu>
        </ListView>
    </HBox>
    <HBox prefHeight="49.0" prefWidth="428.0">
        <Button fx:id="upButtonClient" alignment="CENTER" mnemonicParsing="false" onAction="#pathUpClient" prefHeight="49.0"
                prefWidth="93.0" text="^^^"/>
        <Button fx:id="upload" mnemonicParsing="false" onAction="#upload" prefHeight="49.0" prefWidth="211.0"
                text="&gt;&gt;&gt;"/>
        <Button fx:id="download" mnemonicParsing="false" onAction="#download" prefHeight="49.0" prefWidth="210.0"
                text="&lt;&lt;&lt;"/>
        <Button fx:id="upButtonServer" onAction="#pathUpRequest" mnemonicParsing="false" prefHeight="49.0" prefWidth="93.0" text="^^^"/>
    </HBox>
</VBox>
